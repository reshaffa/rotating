<div class="modal fade" id="modal-create-areas" tabindex="-1" role="dialog" aria-labelledby="mcu-title" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="form-group row">
          <div class="col">
            <strong class="modal-title" id="mcu-title">Create New Area</strong>
          </div>
          <div class="col text-right">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          </div>
        </div>
        <br />
        <form id="submit-area" asp-action="Create" asp-controller="Area" method="post">
          <div class="form-group row">
            <div class="col-md-3">
              <label class="control-label" for="name">Name <span class="text-danger">*</span></label>
            </div>
            <div class="col-md-9">
              <input type="text" class="form-control form-control-sm" id="name" />
              <small class="form-text text-danger error-name"></small> 
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-3">
              <label class="control-label" for="phone">Type <span class="text-danger">*</span></label>
            </div>
            <div class="col-md-5">
              <select class="form-control form-control-sm" id="type">
                <option value="">--Select Type --</option>
                <option value="0"> Vibrations </option>
                <option value="1"> Operations </option>
              </select>
              <small class="form-text text-danger error-type"></small> 
            </div>
          </div>
          <div class="from-group row">
            <div class="col-md-9 offset-md-3">
              <button type="reset" class="btn btn-sm btn-danger" data-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-sm btn-primary" id="btn-save">Save</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>