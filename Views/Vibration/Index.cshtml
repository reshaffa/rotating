@{
    ViewData["Title"] = "Home Page";
}
@section HeadBlock {
    <script src="~/lib/excel/shim.min.js"></script>
    <script src="~/lib/excel/xlsx.full.min.js"></script>
}

<div class="container mt-5">
    <form id="submit-uploads" asp-action="Create" asp-controller="Vibration" method="POST">
        <div class="form-group row">
            <div class="col-md-5">
                <label for="file" class="control-label">Upload File Excel <span class="text-danger">*</span></label>
                @*
                    <input type="file" id="file-upload" class="form-control form-control-sm" style="padding: 3.75px;">
                *@
                
                <div class="input-group input-group-sm">
                    <div class="custom-file" lang="id">
                        <label class="custom-file-label col-form-label-sm" for="file-upload">Choose file</label>
                        <input type="file" class="custom-file-input form-control-sm" id="file-upload"/>
                    </div>
                </div>
                <input type="hidden" id="convert-uploads">
                <i><small class="error-uploads text-danger"></small></i>
            </div>
            <div class="col-md-2">
                <label for="select-year" class="control-label">Tahun <span class="text-danger">*</span></label>
                <select name="year" id="select-year" class="form-control"></select>
                <i><small class="error-year text-danger"></small></i>
            </div>
            <div class="col-md-3">
                <label for="select-month" class="control-label">Bulan <span class="text-danger">*</span></label>
                <select name="year" id="select-month" class="form-control"></select>
                <i><small class="error-month text-danger"></small></i>
            </div>
            <div class="col-md-2">
                <label for="select-week" class="control-label">Week <span class="text-danger">*</span></label>
                <select name="week" id="select-week" class="form-control"></select>
                <i><small class="error-week text-danger"></small></i>
            </div>
        </div>
    </form>
    <div class="form-group row" style="margin-bottom: 5px">
        <div class="col-md-8">
            <button type="button" id="btn-uploads" class="btn btn-success btn-sm">Submit</button>
        </div>
        <div class="col-md-4">
            <input type="text" id="search-table" class="form-control form-control-sm" autofocus="true" placeholder="Ketik kata kunci disini...">
        </div>
    </div>
    <div class="table-responsive">
        <table id="table-vibrations" class="table table-bordered table-sm table-striped table-hover" style="width:100%">
            <thead class="bg-dark">
                <tr class="text-white">
                    <th>#</th>
                    <th>Filename</th>
                    <th>Description</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td scope="row"></td>
                    <td>first filename</td>
                    <td>first description</td>
                    <td>#</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
@section ScriptsBlock {
    <script src="~/js/site.js" asp-append-version="true"></script>
}
